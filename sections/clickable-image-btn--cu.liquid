<div
  {% if section.settings.css_id != blank %}
    id="{{ section.settings.css_id }}"
  {% endif %}
  class="cu_clickable_image_container"
>
  <div clas="page_width">
    {% if section.settings.image_1 != blank %}
      <div class="cu_clickable_image_card">
        <a href="">
          <img src="{{ section.settings.image_1 }}" alt="">
        </a>
        <p>{{ section.settings.image_text_1 }}</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "clickable image btn cu",
  "class": "section",
  "settings": [
    {
      "type":"text",
      "id":"css_id",
      "label":"css id"
    },
    {
      "type":"text",
      "id":"css_classes",
      "label": "CSS Classes (separate classes with space)"
    },
    {
      "type":"range",
      "id":"num_of_column",
      "min":1,
      "max":4,
      "default":2,
      "label":"Select number of column"
    }
  ],
  "max_blocks":4,
  "blocks": [
    {
      "name":"image card",
      "type":"card",
      "limit":4,
      "settings":[
        {
          "type":"image_picker",
          "id":"image",
          "label":"Image"
        },
        {
          "type":"text",
          "id":"image_link_label",
          "label":"Link label"
        },
        {
          "type":"url",
          "id":"image_url",
          "label":"Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "clickable image btn cu"
    }
  ]
}
{% endschema %}

