<div
  {% if section.settings.css_id != blank %}
    id="{{ section.settings.css_id }}"
  {% endif %}
  {% if section.settings.css_classes != blank %}
    class="cu-clickable-image-container {{ section.settings.css_classes }}"
  {% endif %}
>
  <div clas="page_width">
    {% for block in section.blocks %}
      <div class="cu-clickable-image-card" {{ block.shopify_attributes }}>
        {% if block.settings.image_url != blank and blocks.settings.image != blank %}
          <a class="cu-clickable-link" 
            href="{{ block.settings.image_url }}">
             {% if block.settings.image != blank %} 
               <img
              src="{{ block.settings.image }}"
            width="100"
            height="100"
            alt=""
/ >    {% endif %}
          {% if block.settings.image_text != blank %}
            <p>{{ block.settings.image_link_label }}</p>
          {% endif %}
                {% endif %}
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "clickable image btn cu",
  "class": "section",
  "settings": [
    {
      "type":"text",
      "id":"css_id",
      "label":"css id"
    },
    {
      "type":"text",
      "id":"css_classes",
      "label": "CSS Classes (separate classes with space)"
    }
  ],
  "max_blocks":4,
  "blocks": [
    {
      "name":"image card",
      "type":"card",
      "limit":4,
      "settings":[
        {
          "type":"image_picker",
          "id":"image",
          "label":"Image"
        },
        {
          "type":"text",
          "id":"image_link_label",
          "label":"Link label"
        },
        {
          "type":"url",
          "id":"image_url",
          "label":"Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "clickable image btn cu"
    }
  ]
}
{% endschema %}

